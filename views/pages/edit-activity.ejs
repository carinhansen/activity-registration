<div id="edit-activity">
  <div class="container">
    <h1>Activiteit bewerken</h1>
    <div class="q-and-a">
      <hr class="mt-4 mb-4"/>
      <form method="post" action="/activiteiten/update/<%= activity.id%>">
        <input type="hidden" name="_csrf" value="<%- _csrf %>" />
        <div class="form-group">
          <label for="title">Titel</label>
          <input name="title" class="form-control form-control-sm" type="text" id="title" value="<%= activity.title %>" required/>
        </div>
        <div class="form-group">
          <label for="description">Beschrijving</label>
          <textarea class="form-control" name="description" id="description" required><%= activity.description %></textarea>
        </div>

        <div class="form-group">
          <label for="shortDescription">Korte beschrijving</label>
          <textarea class="form-control" name="shortDescription" id="" required><%= activity.shortDescription %></textarea>
        </div>

        <div class="row">
          <div class="col">
            <div class="form-group">
              <label for="type">Opkomsten:</label>
              <select class="form-control" id="type" name="type" required>
                <option value="<%= activity.type %>" selected="selected" hidden="hidden">Selecteer een opkomst</option>
                <option disabled>-</option>
                <option>Steunverlening</option>
                <option>Pelotonsopkomst</option>
                <option>Oefening</option>
                <option>Telling</option>
                <option>Vergadering</option>
                <option>Compagniesopkomst</option>
                <option>Ceremonieel</option>
                <option>Overige activiteit</option>
              </select>
            </div>
          </div>
          <div class="col">
            <div class="form-group">
              <label for="location">Opkomstlocatie</label>
              <input name="location" class="form-control form-control-sm" type="text" id="location" value="<%= activity.location %>" required/>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col">
            <div class="form-group">
              <label for="startDate">Begin datum:</label>
              <input value="<%= activity.startDate %>" name="startDate" type="date" class="form-control"/>
            </div>
          </div>
          <div class="col">
            <div class="form-group">
              <label for="startTime">Begin tijd:</label>
              <input value="<%= activity.startTime %>" type="time" id="" name="startTime" class="form-control">
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col">
            <div class="form-group">
              <label for="endDate">Eind datum:</label>
              <input value="<%= activity.endDate %>" name="endDate" type="date" class="form-control"/>
            </div>
          </div>
          <div class="col">
            <div class="form-group">
              <label for="endTime">Eind tijd:</label>
              <input type="time" id="" name="endTime" value="<%= activity.endTime %>" class="form-control">
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="subject">Onderwerp:</label>
          <select class="form-control" id="subject" name="subject" required>
            <option value="<%= activity.subject %>" selected="selected" hidden="hidden">Selecteer een onderwerp</option>
            <option disabled>-</option>
            <option>MBV</option>
            <option>SIM</option>
            <option>MZV</option>
            <option>FIT</option>
            <option>DCP</option>
            <option>ISK</option>
            <option>GB</option>
            <option>O&T</option>
            <option>MDO</option>
            <option>Anders:</option>
          </select>
        </div>


        <div class="form-group">
          <label>Doelgroep:</label>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="<%= activity.targetPeleton %>"name="targetPeleton">
            <label class="form-check-label" for="targetPeleton">
              Peleton
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="<%= activity.targetInzetbaarPersoneel %>"name="targetInzetbaarPersoneel">
            <label class="form-check-label" for="targetInzetbaarPersoneel">
              Inzetbaar personeel
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="<%= activity.targetKader %>" name="targetKader">
            <label class="form-check-label" for="targetKader">
              Kader
            </label>
          </div>
        </div>

        <div class="form-group">
          <hr class="mt-4 mb-4"/>
          <p><strong>Manschappen toevoegen:</strong></p>
          <% usersIn.forEach(function(userIn){ %>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" checked="checked" value="<%= userIn.id%>" name="userID">
              <label class="form-check-label" for="userID">
                <%= userIn.fullName %>
              </label>
            </div>
          <% })%>
          <% usersOut.forEach(function(userOut){ %>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="<%= userOut.id%>" name="userID">
              <label class="form-check-label" for="userID">
                <%= userOut.fullName %>
              </label>
            </div>
          <% })%>
        </div>

        <input type="submit" value="Opslaan" class="btn btn-secondary btn-sm"/>
      </form>
    </div>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
