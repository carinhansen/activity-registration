<div id="activity-overview">
  <div class="container">
    <div class="header-container">
      <h1>Alle activiteiten</h1>
     <a class="btn btn-outline-info header-btn" href="/activiteiten/nieuw">Activiteit toevoegen</a>
    </div>
    <% activities.forEach(function(activity){ %>
      <a href="/detail/<%= activity.id%>">
      <div>
        <hr class="mt-4 mb-4"/>
          <h4 class="activity-title"><%= activity.title%></h4>
          <p class="activity-description"><%= activity.shortDescription%></p>
          <p><small class="small-text">Start datum en tijd: <%= activity.startDate%> <%= activity.startTime%></small></p>
      </div>
      </a>
    <% })%>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
